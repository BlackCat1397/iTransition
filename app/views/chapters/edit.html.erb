<% provide(:title, @chapter.title) %>
<h1>Edit <%= @chapter.title %></h1>
<div class="center">
  <div class="row">
    <%= form_for(@chapter, :url => user_post_chapter_path,
            html: { class: 'col-md-offset-2 col-md-8' }) do |f| %>

      <div class="form-group">
        <%= f.label :title %><br/>
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :text %><br/>
        <%= f.text_area :content, class: 'form-control text-area', :rows => 13 %>
      </div>

      <div class="actions">
        <%= f.submit "Create", class: 'btn btn-primary'  %>
      </div>
    <% end %>
  </div>
</div>